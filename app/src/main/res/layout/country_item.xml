<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="12dp">

    <!--
        É muito importante o total entendimento do componente visual
        LinearLayout para então saber o porquê de termos utilizado
        aqui o atributo android:layout_weight nas três visualizações
        filhas de LinearLayout.

        Sendo assim, não deixe de consumir o conteúdo (vídeo e texto)
        do link a seguir:

        https://www.thiengo.com.br/linearlayout-no-android-entendendo-e-utilizando
    -->

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white" />

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="0.4"
        android:contentDescription="@string/country_flag"
        android:gravity="start" />

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/white" />

</LinearLayout>